@model List<Tarefa>

<h2 class="text-center titulo-app"><i class="bi bi-check-square-fill"></i><p class="text-warning">Tarefas A Fazer</p></h2>
<br />
<table class="table text-center">
    <tr>
        <th>Tarefa</th>
        <th>Data de início</th>
        <th>Data de conclusão</th>
        <th></th>
    </tr>
    <tbody>
        @foreach (var tarefa in Model)
        {
            <tr>
                <td>@tarefa.NomeTarefa</td>
                <td>@Html.DisplayFor(modelItem => @tarefa.DataInicioTarefa)</td>
                <td>@Html.DisplayFor(modelItem => @tarefa.DataFinalTarefa)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@tarefa.TarefaId" class="btn btn-info"><i class="bi bi-pencil-square"></i> Renomear</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
<div class="d-grid gap-2 col-2 mx-auto">
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>
